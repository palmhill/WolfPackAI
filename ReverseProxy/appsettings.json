{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8181"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "litellm-route": {
        "ClusterId": "litellm-cluster",
        "Match": {
          "Path": "/litellm/{**catch-all}"
        },
        "Transforms": [

          {
            "PathPattern": "/{**catch-all}"
          },
          {
            "RequestHeader": "X-Forwarded-For",
            "Append": "{RemoteIpAddress}"
          },
          {
            "RequestHeader": "X-Forwarded-Proto",
            "Set": "{Scheme}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{Host}"
          },
          {
            "RequestHeader": "X-Forwarded-Prefix",
            "Set": "/litellm"
          }

        ]
      }
    },
    "Clusters": {
      "litellm-cluster": {
        "Destinations": {
          "litellm-destination": {
            "Address": "http://localhost:4000/litellm"
          }
        }
      }
    }
  }
}